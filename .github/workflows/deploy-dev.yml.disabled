name: Deploy to Dev on Tag

on:
    push:
        branches:
            - dev

jobs:
    deploy:
        name: ğŸš€ Deploy dev server
        runs-on: ubuntu-latest

        steps:
            - name: Checkout repo
              uses: actions/checkout@v4
              with:
                  fetch-depth: 0

            - name: Deploy via SSH
              uses: appleboy/ssh-action@v0.1.9
              with:
                  host: ${{ secrets.SSH_HOST }}
                  username: ${{ secrets.SSH_USER }}
                  key: ${{ secrets.SSH_KEY }}
                  script: |
                      set -e
                      cd ~/develop/llm-chat-client   # Dev ì„œë²„ì˜ ì‹¤ì œ ê²½ë¡œë¡œ ë³€ê²½
                      git fetch --tags
                      git checkout dev
                      git pull origin dev
                      docker compose up -d --build
